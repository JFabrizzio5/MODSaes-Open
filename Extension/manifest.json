{
    "manifest_version": 3,
    "name": "ModSaes-Open",
    "version": "0.1",
    "description": "Extension y iniciativa de codigo abierto para mejorar experiencia con el saes ",
    "permissions": ["activeTab"],
    "host_permissions": ["<all_urls>"],
    "content_scripts": [
      {
        "matches": [  "https://*.saes.*.ipn.mx/*",
                      "http://*.saes.*.ipn.mx/*"], 
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_popup": "popup.html"
 
    }
  }
  
